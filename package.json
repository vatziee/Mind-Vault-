{
  "name": "vaultmind",
  "version": "1.0.0",
  "description": "A desktop application for macOS to manage and index large external hard drives for creative professionals.",
  "main": "dist/main/index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx server.ts",
    "dev:electron": "concurrently -k \"npm:dev:main\" \"npm:dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite --port=3000 --host=0.0.0.0",
    "start": "npm run build && electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "pack": "npm run build && electron-builder",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@google/genai": "^1.29.0",
    "@tailwindcss/vite": "^4.1.14",
    "@vitejs/plugin-react": "^5.0.4",
    "better-sqlite3": "^12.4.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "lucide-react": "^0.546.0",
    "motion": "^12.23.24",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.7.0",
    "tailwind-merge": "^3.5.0",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.vaultmind.app",
    "productName": "VaultMind",
    "files": [
      "dist/",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.14.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.21.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.4",
    "wait-on": "^9.0.4"
  }
}
